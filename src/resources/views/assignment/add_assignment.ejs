<%- include('../layouts/header') %>

    <div class="container">
        <h1>
            Add new assignments
        </h1>

        <form action="/course/c/<%= course.id %>/a" method="POST" enctype="multipart/form-data" class="lg-form">
            <div>
                <label for="name">Title</label>
                <input type="text" name="name" id="name" placeholder="Enter the title">
            </div>
            <div>
                <label for="description">Description</label>
                <input type="text" id="description" name="description" placeholder="Some description...">
            </div>
            <div>
                <label for="setDeadlineDate">Set Deadline</label>
                <input type="datetime-local" class="form-control" id="" name="setDeadlineDate"/>
            </div>
            <div>
                <label for="setDueDate">Due Date</label>
                <input type="datetime-local" class="form-control" id="" name="setDueDate"/>
            </div>
            <div>
                <label>Choose files to upload</label>
                <input type="file" name="image" multiple>
            </div>
            <div>
                <input type="submit" value="Create">
            </div>
        </form>
    </div>


    <%- include('../layouts/footer') %>