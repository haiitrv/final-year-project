

<%- include('../layouts/header') %>


    <div class="container">
        <h1>Assignments</h1>


        <table class="table">
            <thead>
                <th>Name</th>
                <th>Description</th>
                <th>Assignment URL</th>
            </thead>
            <tbody>
                <% assignments.forEach(asm=> { %>
                    <tr>
                        <td>
                            <a href="/course/c/<%= course.id %>/a/<%= asm.id %>">
                                <%= asm.name %>
                            </a>
                        </td>
                        <td>
                            <%= asm.description %>
                        </td>
                        <td>
                            <%= asm.cloudinary_url %>
                        </td>

                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>



<%- include('../layouts/footer') %> 