<%- include('../layouts/header') %>

    
    <div class="container-sm">
        <div class="add_class_title">
            <h1>Add New Class</h1>
        </div>
        
        <form action="/aad/add" method="POST" class="lg-form">
            <div>
                <label for="name">Class Name</label>
                <input type="text" name="name" id="name">
            </div>
            <div>
                <label for="description">Class Description</label>
                <textarea id="description" name="description" rows="4" cols="120">
            </textarea>
            </div>
            <div>
                <label for="user">User Created</label>
                <select name="user" id="user">
                    <% users.forEach(usr=> { %>
                        <option value="<%= usr._id %>">
                            <%= usr.email %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div>
                <input type="submit" value="Create">
            </div>
        </form>
    </div>
    <br>
    <br>
    <br>
    <br>
    <br>
    <%- include('../layouts/footer') %>